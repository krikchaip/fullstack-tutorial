{
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@test/*": ["test/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
